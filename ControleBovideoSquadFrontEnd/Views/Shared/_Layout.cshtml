<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ControleBovideoSquadFrontEnd</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ControleBovideoSquadFrontEnd.styles.css" asp-append-version="true" />
    <script type='text/javascript' src='https://knockoutjs.com/downloads/knockout-3.5.1.js'></script>
    <script type='text/javascript' src='https://code.jquery.com/jquery-3.6.0.min.js'></script>   
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark bg-dark mb-3 sticky-top">
            <div class="container-fluid ">
                <a class="navbar-brand" href="/">Controle de Bovideos</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active" href="produtor">
                                Produtor
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="propriedade">
                                Propriedade
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="animal">
                                Rebanho
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="registro-vacina">
                                Registro de Vacina
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="venda">
                                Venda
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - ControleBovideoSquadFrontEnd - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
