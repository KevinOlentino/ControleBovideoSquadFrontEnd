<div class="container col-xxl-8 px-4 py-4">
  <h1 class="display-5 text-center">Lista de rebanhos</h1>
  <br>
  <p class="blockquote-footer text-center">
    Listagem de rebanhos
  </p>
<div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Quantidade total</th>
                <th>Quantidade vacinada aftosa</th>
                <th>Quantidade vacinada brucelose</th>
                <th>Espécie</th>
                <th>Propriedade</th>
            </tr>
        </thead>
        <tbody data-bind="foreach: rebanhos">
            <tr>
                <td data-bind="text: $data.quantidadeTotal"></td>
                <td data-bind="text: $data.quantidadeVacinadaAftosa"></td>
                <td data-bind="text: $data.quantidadeVacinadaBrucelose"></td>
                <td data-bind="text: $data.especie"></td>
                <td data-bind="text: $data.nomePropriedade"></td>
            </tr>
        </tbody>
    </table>
</div>
@section scripts{
    <script src='../js/notificacao.js'></script>
    <script>
        function appViewModel() {
            this.rebanhos = ko.observableArray();
            $.get('https://localhost:7168/api/rebanho', data => {
                console.log(data)
                this.rebanhos(data)
            })
        }
        ko.applyBindings(new appViewModel())
    </script>
}